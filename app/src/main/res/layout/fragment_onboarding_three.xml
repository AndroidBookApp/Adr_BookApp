<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.onboarding.fragment_onboarding_three">


    <ImageView
        android:id="@+id/img_onbr_3"
        android:layout_width="0dp"
        android:layout_height="250sp"
        android:layout_marginTop="36dp"
        android:background="@drawable/onboarding3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_txt"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lo_txt"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/color_btn"
            android:fontFamily="@font/roboto_bold"
            android:text="Đăng Nhập"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_dki"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stoker"
            android:fontFamily="@font/roboto_bold"
            android:text="Đăng Ký"
            android:textColor="@color/btn_color"
            android:textSize="16dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_txt"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/img_onbr_3"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunitosansbold"
            android:gravity="center"
            android:text="Android Book Đăng Nhập"
            android:textColor="@color/color_text_onbrd"
            android:textSize="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hindsiliguri_medium"
            android:gravity="center"
            android:text="Xin mời bạn đăng nhập
hoặc đăng kí để tiếp tục sử dụng"
            android:padding="20sp"
            android:textColor="@color/color_text_onbrd"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
