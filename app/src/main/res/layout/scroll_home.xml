<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlt_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_home">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Trang Chủ"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/id2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/id1"
            android:layout_marginTop="8dp"
            android:background="@color/line" />
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/scv"
        android:layout_below="@+id/bar_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">
        <!--            android:id="@+id/rlt_home"-->
            <RelativeLayout
                android:id="@+id/lo6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/id3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="27dp"
                    android:orientation="horizontal"
                    tools:ignore="NotSibling">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"

                        android:text="Sách mới"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:text="(10)"
                        android:textColor="#FF0000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_gravity="right"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                       >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"

                            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="5dp"
                            android:text="Xem tất cả" />
                    </LinearLayout>
                </LinearLayout>


            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_below="@+id/btn_navigatione"
                android:id="@+id/viewview"
                tools:ignore="NotSibling" />

            <RelativeLayout
                android:id="@+id/lo_main"
                android:layout_width="match_parent"
                android:layout_below="@id/id3"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:overScrollMode="never">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/view_2"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="23dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/cr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        app:ci_drawable="@drawable/color_circle" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="23dp"
                    android:screenReaderFocusable="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    tools:ignore="NotSibling" />
            </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btn_navigatione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/btn_navigation"
        app:itemIconTint="@color/custom_color_btn_navigation"
        app:itemTextColor="@color/custom_color_btn_navigation"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navigation"
        tools:ignore="InvalidId,MissingConstraints,NotSibling" />
