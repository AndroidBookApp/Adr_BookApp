<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_home">
    <ScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/lo_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang Chủ"
               android:layout_centerHorizontal="true"
                android:gravity="center"

                android:layout_marginTop="14dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/id2"
                android:layout_below="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/line"
                />
            <LinearLayout
                android:id="@+id/id3"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                android:layout_below="@+id/id2"
                android:layout_centerHorizontal="true"
               >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách mới"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10)"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#FF0000"
                android:fontFamily="@font/roboto_bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="150dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="5dp"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:orientation="vertical"
                android:overScrollMode="never">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/cr"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    app:ci_drawable="@drawable/color_circle" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_name"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="23dp"
                android:screenReaderFocusable="false"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                tools:ignore="NotSibling" />

        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btn_navigatione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/btn_navigation"
        app:itemIconTint="@color/custom_color_btn_navigation"
        app:itemTextColor="@color/custom_color_btn_navigation"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navigation"
        tools:ignore="InvalidId,MissingConstraints,NotSibling" />
</RelativeLayout>