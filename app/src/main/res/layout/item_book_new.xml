<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10sp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="135sp"
        android:background="@drawable/custom_cardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bg_sach_new"
        android:layout_width="100sp"
        android:layout_height="150sp"
        android:scaleType="center"
        android:src="@drawable/sach1"
        app:riv_corner_radius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:layout_editor_absoluteX="4sp"
        app:layout_editor_absoluteY="40sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txt_tensach_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:text="Nghĩ Giàu Làm Giàu"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bg_sach_new"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_tacgia_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tensach_new"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/hindsiliguri_medium"
        android:text="Tác giả : Napoleonh Hill"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/bg_sach_new"
        app:layout_constraintTop_toBottomOf="@+id/txt_tensach_new"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/lnl_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tacgia_new"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_marginStart="5sp"
        app:layout_constraintStart_toEndOf="@+id/bg_sach_new"
        app:layout_constraintTop_toBottomOf="@+id/txt_tacgia_new"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/comment_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_vector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/text"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/ic_view_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/comment"
            android:drawableStart="@drawable/ic_view"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="10.000"
            android:textColor="@color/text"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/icon_book_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/ic_view"
            android:drawableStart="@drawable/ic_book_1"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="400 Trang"
            android:textColor="@color/text"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:id="@+id/tomtatNDBookNew"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5sp"
        android:fontFamily="@font/hindsiliguri_regular"
        android:maxLength="100"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/icon_favorite_new"
        app:layout_constraintStart_toEndOf="@+id/bg_sach_new"
        app:layout_constraintTop_toBottomOf="@+id/lnl_view"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_favorite_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="343dp"
        android:background="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>