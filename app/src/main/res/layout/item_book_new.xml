<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bg_sach_new"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sach1"
                app:riv_corner_radius="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/icon_favorite_new"
                android:layout_toRightOf="@id/bg_sach_new"
                tools:ignore="RtlHardcoded">


                <TextView
                    android:id="@+id/txt_tensach_new"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Nghĩ Giàu Làm Giàu"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_tacgia_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tensach_new"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"

                    android:fontFamily="@font/hindsiliguri_medium"
                    android:text="Tác giả : Napoleonh Hill"
                    android:textSize="14dp" />

                <LinearLayout
                    android:id="@+id/lnl_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_tacgia_new"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/comment_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_vector"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/text"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/ic_view_new"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/comment"
                        android:drawableStart="@drawable/ic_view"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="10.000"
                        android:textColor="@color/text"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/icon_book_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/ic_view"
                        android:drawableStart="@drawable/ic_book_1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="400 Trang"
                        android:textColor="@color/text"
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tomtatNDBookNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lnl_view"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/hindsiliguri_regular"
                    android:maxLength="150"
                    android:textSize="10dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/icon_favorite_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_favorite_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>