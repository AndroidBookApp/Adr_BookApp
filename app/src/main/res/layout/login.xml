<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/start">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="230dp"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_above="@id/lo1"
        android:background="@drawable/icon_bgg" />

    <RelativeLayout
        android:id="@+id/lo1"
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/solid_login">


        <TextView
            android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Đăng Nhập"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/lo2"
            android:layout_below="@id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
        <EditText
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"

            android:background="@drawable/color_edittext"
            android:drawableStart="@drawable/ic_email_focused"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Tài Khoản"
            android:paddingStart="10dp"

            android:textColorHint="@color/text"
            android:textSize="15dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/color_edittext"
            android:drawableStart="@drawable/lock_focused"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Mật Khẩu"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColorHint="@color/text"
            android:textSize="15dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/color_btn"
                android:fontFamily="@font/roboto_medium"
                android:text="Đăng Nhập"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/lo3"
        android:layout_below="@id/lo5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:elevation="35dp"
            android:src="@drawable/google"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:backgroundTint="@color/white"
            android:elevation="35dp"
            android:src="@drawable/ci_facebook"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
    <Button
        android:id="@+id/dangky"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lo3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/stoker_btn"
        android:text="Bạn Đã Có Tài Khoản"
        android:textColor="@color/btn_color"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/lo5"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="112dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="@color/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Hoặc"
            android:textColor="@color/line"
            android:textSize="14dp" />

        <View
            android:layout_width="112dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:background="@color/line" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>