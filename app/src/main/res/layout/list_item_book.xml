<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bg_sach"
                android:layout_width="48dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sach1" />

        <TextView

            android:id="@+id/txt_tensach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Nghĩ Giàu Làm Giàu"
            android:textColor="@color/black"
            android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_tacgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="53dp"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Tác giả : Napoleonh Hill"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/lnl_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_below="@id/txt_tacgia"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/bg_sach"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/comment"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"


                    android:drawableStart="@drawable/ic_vector"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/text"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/ic_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/comment"
                    android:drawableStart="@drawable/ic_view"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="10.000"
                    android:textColor="@color/text"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/icon_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/ic_view"
                    android:drawableStart="@drawable/ic_book_1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="400 Trang"
                    android:textColor="@color/text"
                    android:textSize="10dp" />
            </LinearLayout>

        <ImageButton
            android:id="@+id/icon_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_favorite_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>