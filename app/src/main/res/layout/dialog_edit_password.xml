<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/custom_bg_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_pager.model_account.Data_edit_account">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_dialog_text"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_people"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_edit"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txt_editpass1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/toolbar_edit"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:hint="Nhập mật khẩu mới"
                android:drawableStart="@drawable/lock_focused"
                android:background="@drawable/color_edittext"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColorHint="@color/text"
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:passwordToggleEnabled="true"
    >
    <EditText
        android:id="@+id/txt_editpass2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:drawableStart="@drawable/lock_focused"

        android:background="@drawable/color_edittext"
        android:drawablePadding="10dp"
        android:hint="Nhập lại mật khẩu"
        android:fontFamily="@font/roboto_regular"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="@color/text"
        android:textSize="15dp" />
</com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_updatePass"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/color_btn"
            android:fontFamily="@font/roboto_medium"
            android:text="Chỉnh Sửa"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>