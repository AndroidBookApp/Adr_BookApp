    <ImageView
        android:id="@+id/image_view_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_image_bg_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/solid_color"
        android:elevation="35dp"
        android:src="@drawable/ic_baseline_add_photo_alternate_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:src="@drawable/account"
        app:civ_border_color="@color/attribute"
        app:civ_border_width="2dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_image_bg_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#ACACAC"
        android:src="@drawable/ic_baseline_add_photo_alternate_2_24"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

