<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_tt"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:elevation="0dp">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_baseline_navigate_before_24"
                >
                <TextView
                    android:id="@+id/txtNameBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Thông tin cá nhân"
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            >

            <ImageView
                android:id="@+id/image_view_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="94dp"
                    android:src="@drawable/account"
                    app:civ_border_color="@color/attribute"
                    app:civ_border_width="2dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_image_bg_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/circle_image"
                    android:layout_alignEnd="@+id/circle_image"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="-29dp"
                    android:layout_marginEnd="-8dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#ACACAC"
                    android:src="@drawable/ic_baseline_add_photo_alternate_2_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shapeAppearanceOverlay="@color/black"
                    tools:ignore="SpeakableTextPresentCheck" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_image_bg_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="178dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/solid_color"
                    android:elevation="35dp"
                    android:src="@drawable/ic_baseline_add_photo_alternate_24"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>


        </RelativeLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:gravity="right"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lno_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quynh"
                    android:textColorHint="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_gravity="right"
                    />


            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line"/>
            <LinearLayout
                android:id="@+id/lnl_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Tên Đăng Nhập"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hihihhihi"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:padding="10dp"

                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/lnl_round"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/round"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thiết Lập Ngay"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/lnl_date"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Ngày Sinh"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thiết Lập Ngay"
                        android:textSize="12dp"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_gravity="center"
                            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                            android:gravity="right"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/line"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Đổi Mật Khẩu"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:text="Thay đổi"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_update"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/color_btn"
            android:text="Lưu"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </LinearLayout>
</ScrollView>