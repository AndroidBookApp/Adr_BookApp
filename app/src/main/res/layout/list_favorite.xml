<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/custom_cardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sach"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sach1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:layout_editor_absoluteX="4sp"
        app:layout_editor_absoluteY="40sp"
        app:riv_corner_radius="10sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tensach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5sp"
        android:fontFamily="@font/helveticaneue_bold"
        android:singleLine="true"
        android:text="Nghĩ Giàu Làm Giàu"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintEnd_toStartOf="@+id/icon_clear"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sach"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tacgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sach"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/hindsiliguri_medium"
        android:text="Tác giả : Napoleonh Hill"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/sach"
        app:layout_constraintTop_toBottomOf="@+id/tensach"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tomtatND"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5sp"
        android:fontFamily="@font/hindsiliguri_regular"
        android:textColor="@color/title_book"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_clear"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sach"
        app:layout_constraintTop_toBottomOf="@+id/tacgia"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_clear"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="4sp"
        app:layout_editor_absoluteY="40sp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>