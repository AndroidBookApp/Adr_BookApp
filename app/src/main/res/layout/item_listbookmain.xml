<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginStart="10sp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/image_book_main"
        android:layout_width="0dp"
        android:layout_height="150sp"
        android:background="@drawable/custom_cardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sach_main"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginBottom="15sp"
        android:scaleType="center"
        android:layout_marginStart="5sp"
        android:src="@drawable/sach1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:layout_editor_absoluteX="4sp"
        app:layout_editor_absoluteY="70sp"
        app:riv_corner_radius="10sp"
        tools:ignore="MissingConstraints,UnusedAttribute" />

    <TextView
        android:id="@+id/text_tacgia"
        android:layout_width="wrap_content"
        android:padding="5sp"
        android:background="@drawable/cumstom_tacgia"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:fontFamily="@font/hindsiliguri_medium"
        android:singleLine="true"
        android:text="tác giả"
        android:layout_marginTop="5sp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sach_main"
        app:layout_constraintTop_toBottomOf="@+id/tomtatND"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tacgia"
        android:layout_marginStart="10sp"
        android:fontFamily="@font/hindsiliguri_bold"
        android:singleLine="true"
        android:text="Kinh Doanh Online"
        android:textColor="@color/title_book"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sach_main"
        app:layout_constraintTop_toTopOf="@+id/image_book_main"
        app:layout_constraintVertical_bias="0.059"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/tomtatND"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="5sp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/hindsiliguri_regular"

        android:textColor="@color/title_book"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sach_main"
        app:layout_constraintTop_toBottomOf="@+id/text_view"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>