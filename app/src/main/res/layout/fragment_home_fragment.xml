<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment_pager.model_home.Home_fragment">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
          android:id="@+id/lo6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <LinearLayout
              android:id="@+id/id3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_gravity="center"
              android:layout_marginLeft="23dp"
              android:layout_marginTop="27dp"
              android:layout_marginRight="23dp"
              android:orientation="horizontal"
              tools:ignore="NotSibling">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:fontFamily="@font/roboto_bold"
                  android:text="Sách mới"
                  android:textColor="@color/black"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:fontFamily="@font/roboto_bold"
                  android:text="(10)"
                  android:textColor="#FF0000"
                  android:textSize="12dp"
                  android:textStyle="bold" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:gravity="left"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/all_bookNew"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                      android:fontFamily="@font/roboto_regular"
                      android:gravity="right"
                      android:padding="5dp"
                      android:text="Xem tất cả" />
              </LinearLayout>
          </LinearLayout>


          <RelativeLayout
              android:id="@+id/lo_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/id3">

              <LinearLayout
                  android:id="@+id/rl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:orientation="vertical"
                  android:overScrollMode="never">

                  <androidx.viewpager2.widget.ViewPager2
                      android:id="@+id/view_2"
                      android:layout_width="match_parent"
                      android:layout_height="200dp"
                      android:layout_marginLeft="23dp"
                      android:layout_marginRight="23dp" />

                  <me.relex.circleindicator.CircleIndicator3
                      android:id="@+id/cr"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_centerHorizontal="true"
                      android:layout_gravity="center_horizontal"
                      app:ci_drawable="@drawable/color_circle" />
              </LinearLayout>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rcv_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/rl"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="23dp"
                  android:layout_marginEnd="23dp"
                  android:layout_marginBottom="23dp"
                  android:screenReaderFocusable="false"
                  android:scrollbarAlwaysDrawHorizontalTrack="false"
                  tools:ignore="NotSibling" />
          </RelativeLayout>
      </RelativeLayout>
  </ScrollView>
</LinearLayout>