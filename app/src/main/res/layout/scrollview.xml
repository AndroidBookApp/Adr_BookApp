<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_home"
    tools:context=".list_comment.View_Readbook">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_read"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:elevation="0dp">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_baseline_navigate_before_24"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Sách Kinh Doanh"
                    android:textColor="@color/black"
                    android:textSize="24dp" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@id/toolbar_read"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="158dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sach3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Nghĩ Giàu Làm Giàu"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Tác giả : Napoleon Hill"
                        android:textColor="#5C5C5C"
                        android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Thêm Vào Yêu Thích"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/favorite"
                android:drawableStart="@drawable/ic_baseline_favorite_24" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Nghĩ Giàu Làm Giàu"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Nghĩ Giàu Làm Giàu là một trong những cuốn sách
dạy làm giàu bán chạy nhấtmọi thời đại và
được yêu thích nhất hiện nay. Đây là một cuốn sách
rất có giá trị và làm thay đổi cuộc sống của nhiều người. "
                    android:textColor="#8F8F8F"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:text="Đọc Tiếp" />
            </LinearLayout>

            <Button
                android:layout_width="157dp"
                android:layout_height="48dp"
                android:layout_margin="23dp"
                android:background="@drawable/color_btn"
                android:fontFamily="@font/roboto_bold"
                android:text="Đọc Sách"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Bình Luận"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/account" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/edit_text_line"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Viết bình luận..."

                    android:textColorHint="#9A9A9A"
                    android:textSize="12dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <Button
                android:layout_width="66dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_margin="23dp"
                android:background="@drawable/color_btn"
                android:fontFamily="@font/roboto_bold"
                android:text="Gửi"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/layout_1"
                android:background="@color/line" />

            <TextView
                android:id="@+id/bl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Bình Luận Của Mọi Người"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_reabook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                android:layout_marginBottom="23dp"
                tools:ignore="NotSibling" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
