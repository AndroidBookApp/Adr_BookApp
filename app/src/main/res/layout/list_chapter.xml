<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/txt_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Chương 1 : Khát Vọng"
        android:textColor="@color/color_chapter"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_book"
        android:layout_below="@id/txt_chapter"
        android:text="Trang 51-70"
        android:fontFamily="@font/roboto_regular"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        />
<View
    android:id="@+id/view_line"
    android:layout_below="@id/txt_book"
    android:layout_width="wrap_content"
    android:layout_height="1.5dp"
    android:background="@color/line"
    />

</RelativeLayout>