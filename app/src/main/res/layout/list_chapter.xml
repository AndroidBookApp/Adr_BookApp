<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltChapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/txt_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Chương 1 : Khát Vọng"
        android:textColor="@color/color_chapter"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_chapter">
        <TextView
            android:id="@+id/txt_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:layout_weight="10"
            android:text="Trang"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/txt_book_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txt_book_min"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"


            android:text="50 "
            android:textSize="10dp" />
        <TextView
            android:id="@+id/txt_book_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txt_book_min"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:text="-"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/txt_book_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"

            android:layout_toLeftOf="@id/txt_book_max"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="70"
            android:textSize="10dp" />
    </LinearLayout>



</RelativeLayout>