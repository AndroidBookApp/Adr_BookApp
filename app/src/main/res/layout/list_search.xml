<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_search"
    >
    <ImageButton
        android:id="@+id/img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="363dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@+id/txt_search"
        android:background="@drawable/custom_clear"
        android:src="@drawable/ic_baseline_clear_24" />

    <EditText
    android:id="@+id/txt_search"
    android:layout_width="310dp"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:layout_margin="24dp"
    android:padding="10dp"
    android:textSize="16dp"
    android:fontFamily="@font/roboto_regular"
    android:hint="Nhập sách cần tìm tiếm..."
    android:textColorHint="#B5B3B3"
    android:drawableEnd="@drawable/ic_baseline_search_24_1"
    android:background="@drawable/solid_search"
    />
    <LinearLayout
        android:id="@+id/lo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_search"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử tìm kiếm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:gravity="center"
            android:layout_marginLeft="160dp"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/lo1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/line" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="23dp"
        android:id="@+id/rcv_listHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginTop="20dp" />
</RelativeLayout>