<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/lo1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

   >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginStart="23dp"
        android:src="@drawable/ic_baseline_navigate_before_24"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@drawable/stoker_btn"/>
</LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_below="@id/lo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lo2"
        />
    <LinearLayout
        android:id="@+id/lo2"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/background_color"
        >
        <TextView
            android:id="@+id/before"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_navigate_before1_24"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
           android:text="1" />
        <TextView
            android:id="@+id/txt"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:text="/" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:text="20" />
        <TextView
            android:id="@+id/next"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_navigate_next1_24"/>

    </LinearLayout>
</RelativeLayout>