<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solid_login"
    tools:context=".View.View_Readbook.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_nameBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/helveticaneue_bold"
                android:gravity="center"
                android:text="Nguyễn Văn Quỳnh"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_tacGiaBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_tacgia"
                android:drawablePadding="10sp"
                android:fontFamily="@font/hindsiliguri_medium"
                android:gravity="center"
                android:text="Nguyễn Văn Quỳnh"
                android:textColor="@color/title_book"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_NXB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_xuatban"
                android:drawablePadding="10sp"
                android:fontFamily="@font/hindsiliguri_medium"
                android:gravity="center"
                android:text="Nguyễn Văn Quỳnh"
                android:textColor="#5C5C5C"
                android:textSize="14dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/lnl_view"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_weight="3"
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="5dp"
                android:fontFamily="@font/hindsiliguri_medium"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <TextView
                android:layout_weight="3"
                android:id="@+id/ic_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/comment"
                android:drawableStart="@drawable/ic_count_view"
                android:drawablePadding="5dp"
                android:fontFamily="@font/hindsiliguri_medium"
                android:gravity="center"
                android:text="10.000"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <TextView
                android:layout_weight="3"
                android:id="@+id/icon_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/ic_view"
                android:drawableStart="@drawable/ic_favorite"
                android:drawablePadding="5dp"
                android:fontFamily="@font/hindsiliguri_medium"
                android:gravity="center"
                android:text="400 Trang"
                android:textColor="@color/text"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/next"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/lnl_view"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="23dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/roboto_medium"
                android:text="Sơ lược nội dung "
                android:textColor="#404040"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/node_textBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#8F8F8F"
                android:textSize="14sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/read_book"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_below="@id/next"
            android:layout_marginStart="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/color_btn"
            android:fontFamily="@font/roboto_bold"
            android:text="Đọc Sách"
            android:textColor="@color/white"
            android:textSize="14sp" />
<View
    android:layout_below="@id/read_book"
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line"
    />

        <TextView
            android:id="@+id/tv_lienquan"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:fontFamily="@font/helveticaneue_bold"
            android:layout_marginTop="5sp"
            android:text="Sách Liên Quan"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/tv_lienquan" />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
